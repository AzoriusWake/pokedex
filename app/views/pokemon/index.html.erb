<div class = "navbar navbar-inverse navbar-static-top">
  <div class = "container">
    <div class = "navbar-brand">Henry's Pokedex</div>
    <button class = "navbar-toggle" data-toggle="collapse" data-target=".navHeaderCollapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <div class = "collapse navbar-collapse navHeaderCollapse">
      <ul class = "nav navbar-nav navbar-right">
        <li class="active"><a href="#">Pokemon</a></li>
        <li><a href="#">Abilities</a></li>
        <li><a href="#">Types</a></li>
      </ul>
    </div>
  </div>
</div>
<div class="row" ng-controller="pokemonAppCtrl">
  <div class="search col-sm-3">
    <div class="form-group has-feedback">
      <label class="control-label" for="inputSuccess2">Pokemon Search</label>
      <input type="text" class="form-control" ng-model="query" />
      <span class="glyphicon glyphicon-search form-control-feedback"></span>
    </div>
  </div>
  <div class="list col-sm-2">
    <table>
      <thead>
        <tr>
          <div class="pokemon-list">Pokemon List</div>
        </tr>
      </thead>
      <tbody>
        <tr ng-repeat="pokemon in PokemonList | filter:query ">
          <td>
            <div class="pokemon-name" ng-click="getProfile()"><a href="/pokemon/profile" />{{ pokemon.name }}</div>
          </td>
      </tbody>
    </table>
  </div>
  <div class="profile col-sm-6">
    <div class="pokemon-profile">
      <img style="width: 250px" ng-src="{{ Pokemon.img }}" />
      <h2>Name: {{ Pokemon.name }}</h2>
      <h4>Pokedex: {{ Pokemon.pkdx_id }}</h4>
      <h4>Height: {{ Pokemon.height }}</h4>
      <h4>Weight: {{ Pokemon.weight }}</h4>
      <h4>Attack: {{ Pokemon.attack }}</h4>
      <h4>Defense: {{ Pokemon.defense }}</h4>
      <h4>Speed: {{ Pokemon.speed }}</h4>
      <h4>HP: {{ Pokemon.hp }}</h4>
    </div>
  </div>
  <div class="col-sm-1"></div>
</div>
